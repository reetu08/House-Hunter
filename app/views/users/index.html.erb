<div class="container">
  <div class="row">
    <h3>Users</h3>
    <div class="column">
      <table class="table">
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <%= render user %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <% if (current_user.admin?) %>
      <%= link_to("Add user", new_user_path, :class => 'button-xs') %>
    <% end %>
  </div>
</div>
