<div class="authform">
  <%= form_for @user, :url => users_manual_path, :html => {:method => :post} do |f| %>
    <h3>Create User</h3>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :roles %>
      <div>
        <% Role.all.each do |role| %>
          <%= f.label role.name %>
          <%= f.check_box(:roles, {}, role.id, false) %>
        <% end %>
      </div>
    </div>
    <%= f.submit 'Create', :class => 'button right' %>
  <% end %>
</div>