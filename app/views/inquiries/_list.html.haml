%table
  %thead
    %tr
      %th House
      %th Subject
      %th Message

  %tbody
    - inquiries.each do |inquiry|
      %tr
        %td= link_to 'House', house_path(inquiry.house.id)
        %td= inquiry.subject
        %td= inquiry.message
        %td= link_to 'Show', inquiry
        - if can_edit
          %td= link_to 'Edit', edit_inquiry_path(inquiry)
          %td= link_to 'Destroy', inquiry, method: :delete, data: { confirm: 'Are you sure?' }
        - if !inquiry.inquiry_reply.nil?
          %td= link_to 'View Reply', inquiry_reply_url(inquiry.inquiry_reply)